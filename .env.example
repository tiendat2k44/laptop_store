# Environment Configuration (Database, APIs, Credentials)
# DO NOT commit this file to git. Add .env to .gitignore

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=laptop_store
DB_USER=postgres
DB_PASS=your_secure_password_here

# For MySQL/MariaDB (use this instead of PostgreSQL)
# DB_DRIVER=mysql
# DB_PORT=3306

# ============================================
# PAYMENT GATEWAY CREDENTIALS
# ============================================

# VNPay Configuration
VNPAY_TMN_CODE=your_tmn_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_API_URL=https://sandbox.vnpayment.vn/paygate/pay.html
VNPAY_QUERY_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction

# MoMo Configuration
MOMO_PARTNER_CODE=your_partner_code
MOMO_ACCESS_KEY=your_access_key
MOMO_SECRET_KEY=your_secret_key
MOMO_API_URL=https://test-payment.momo.vn/v2/gateway/api/create

# ============================================
# EMAIL CONFIGURATION (PHPMailer)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_EMAIL=noreply@laptopstore.com
MAIL_FROM_NAME=Laptop Store

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=production
SITE_NAME=Laptop Store
SITE_URL=https://laptopstore.com
SITE_EMAIL=support@laptopstore.com

# ============================================
# SECURITY SETTINGS
# ============================================
SESSION_TIMEOUT=3600
REMEMBER_ME_DURATION=2592000
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_WINDOW=300

# ============================================
# REDIS CONFIGURATION (Optional but recommended)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_PATH=/var/log/laptop_store
